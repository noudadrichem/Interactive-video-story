#mainContainer
  width: 1270px
  height: 715px
  position:relative
  margin:auto
  overflow:hidden
  box-shadow:0 0px 25px 7px rgba(0,0,0,0.2)
  transform: scale(1.0)
  transition:400ms ease
  #videoContainer
    width:100%
    height:100%
    #video
      height: 100%
      width: 100%
      overflow: hidden

  #videobalk
    height:5px
    width:100%
    position:absolute
    bottom:0
    left:0
    background:red
    z-index:10000

  .points
    position:absolute
    top:10px
    height:20px
    width:20px
    left:10px
    text-align:center
    h1
      font-size:1em

  &.zoom
    transform: scale(1.1) !important
    transition: 5000ms all !important
