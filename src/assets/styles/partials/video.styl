#mainContainer
  width: 1270px
  height: 715px
  position:relative
  margin:auto
  overflow:hidden
  // border:2px solid red
  box-shadow:0 0px 25px 7px rgba(0,0,0,0.2)
  transform: scale(1.0)
  transition:400ms ease
  #videoContainer
    width:100%
    height:100%
    #video
      height: 100%
      width: 100%
      overflow: hidden
  &.zoom
    transform: scale(1.2) !important
    transition: 8000ms all !important
